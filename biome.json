{
	"$schema": "https://biomejs.dev/schemas/2.0.6/schema.json",
	"files": {
		"includes": [
			"**",
			"!**/dist",
			"!**/docs/.vitepress",
			"!**/frameworks",
			"!**/node_modules",
			"!**/playwright-report",
			"!**/test-results"
		]
	},
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"formatter": {
		"enabled": true
	},
	"javascript": {
		"formatter": {
			"enabled": true
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	}
}
