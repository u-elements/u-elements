{
  "type": "module",
  "private": true,
  "license": "MIT",
  "description": "HTML tags, just truly accessible",
  "workspaces": [
    "packages/*"
  ],
  "homepage": "https://u-elements.github.io/u-elements/",
  "repository": {
    "type": "git",
    "url": "https://github.com/u-elements/u-elements.git"
  },
  "bugs": {
    "url": "https://github.com/u-elements/u-elements/issues"
  },
  "scripts": {
    "build": "npm run build --workspaces",
    "docs:build": "npm run build && vitepress build docs",
    "docs:dev": "vitepress dev docs",
    "docs:preview": "vitepress preview docs",
    "lint": "eslint",
    "prepublishOnly": "npm run build",
    "start": "vite",
    "start:qwik": "vite --config=frameworks/qwik/vite.config.ts",
    "start:react": "vite --config=frameworks/react/vite.config.ts",
    "start:solid": "vite --config=frameworks/solid/vite.config.ts",
    "start:svelte": "vite --config=frameworks/svelte/vite.config.ts",
    "start:vue": "vite --config=frameworks/vue/vite.config.ts",
    "test": "web-test-runner",
    "test:coverage": "npm run test -- --coverage",
    "test:update": "npm run test -- --update-snapshots"
  },
  "devDependencies": {
    "@builder.io/qwik": "^1.4.5",
    "@codemirror/lang-html": "^6.4.8",
    "@custom-elements-manifest/analyzer": "^0.9.3",
    "@esm-bundle/chai": "^4.3.4-fix.0",
    "@remcovaes/web-test-runner-vite-plugin": "^1.2.1",
    "@sveltejs/vite-plugin-svelte": "^3.0.1",
    "@tsconfig/svelte": "^5.0.2",
    "@types/mocha": "^10.0.6",
    "@types/react": "^18.2.61",
    "@typescript-eslint/eslint-plugin": "7.1.0",
    "@typescript-eslint/parser": "7.1.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vue/runtime-dom": "^3.4.21",
    "@web/test-runner": "^0.18.0",
    "@web/test-runner-commands": "^0.9.0",
    "@web/test-runner-playwright": "^0.11.0",
    "codemirror": "^6.0.1",
    "custom-element-vs-code-integration": "^1.2.3",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "prettier": "3.2.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "solid-js": "^1.8.15",
    "svelte": "^4.2.12",
    "svelte-check": "^3.6.6",
    "tslib": "^2.6.2",
    "tsup": "^8.0.2",
    "typescript": "5.3.3",
    "vite": "^5.1.4",
    "vite-plugin-cem": "^0.7.0",
    "vite-plugin-solid": "^2.10.1",
    "vitepress": "^1.0.0-rc.44",
    "vue": "^3.4.21",
    "vue-codemirror6": "^1.2.5",
    "vue-tsc": "^2.0.2"
  },
  "prettier": {
    "endOfLine": "auto",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2020": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "prettier"
    ],
    "root": true,
    "rules": {
      "prettier/prettier": "error",
      "@typescript-eslint/recommended": {
        "allowDeclarations": true
      }
    }
  },
  "eslintIgnore": [
    "dist",
    "frameworks",
    "node_modules"
  ]
}
