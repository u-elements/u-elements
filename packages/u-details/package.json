{
	"name": "@u-elements/u-details",
	"version": "0.2.0",
	"license": "MIT",
	"description": "HTML tags, just truly accessible",
	"homepage": "https://u-elements.github.io/u-elements/",
	"type": "module",
	"main": "dist/u-details.cjs",
	"module": "dist/u-details.js",
	"types": "dist/u-details.d.ts",
	"customElements": "dist/u-details.manifest.json",
	"exports": {
		".": {
			"import": {
				"types": "./dist/u-details.d.ts",
				"default": "./dist/u-details.js"
			},
			"require": {
				"types": "./dist/u-details.d.cts",
				"default": "./dist/u-details.cjs"
			}
		},
		"./polyfill": {
			"import": {
				"types": "./dist/polyfill.d.ts",
				"default": "./dist/polyfill.js"
			},
			"require": {
				"types": "./dist/polyfill.d.cts",
				"default": "./dist/polyfill.cjs"
			}
		}
	},
	"files": [
		"dist"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/u-elements/u-elements.git"
	},
	"bugs": {
		"url": "https://github.com/u-elements/u-elements/issues"
	},
	"scripts": {
		"build": "tsup --config ../../tsup.config.ts && tsup --config ./tsup.polyfill.config.ts",
		"publish:patch": "npm version patch && git push --tags origin main && npm publish",
		"publish:minor": "npm version minor && git push --tags origin main && npm publish",
		"publish:major": "npm version major && git push --tags origin main && npm publish"
	}
}
